general {
        colors = true
        interval = 1
}

#order += "battery all"
order += "volume master"
order += "disk /"
order += "tztime local"

battery all {
        format = "%status %percentage %remaining"
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

disk "/" {
        format = "%avail"
}

tztime local {
        format = "%m-%d-%Y %I:%M %p"
}
